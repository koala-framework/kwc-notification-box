{% block notificationBox %}
    {% if showBanner %}
        <div class="{{ rootElementClass }}">

            {% block alterationDate %}
                <div class="{{ 'alterationDate'|bemClass }}" data-alteration-date="{{ alterationDate }}"></div>
            {% endblock %}

            {% block headline %}
                {% if headline %}
                    <div class="kwfUp-notificationBox__headline">
                        {{ headline }}
                    </div>
                {% endif %}
            {% endblock %}

            {% block infoText %}
                {% if text %}
                    <div class="kwfUp-notificationBox__text">
                        {{ text }}
                    </div>
                {% endif %}
            {% endblock %}

            {% block infoLink %}
                <div class="kwfUp-notificationBox__info">
                    {% if linktag.hasContent() %}
                        {{ renderer.component(linktag) }}
                        {{ moreText }}
                    {% endif %}

                    {% if linktag.hasContent() %}</a>{% endif %}
                </div>
            {% endblock %}

            {% block acceptLink %}
                <a href="#" class="{{ 'accept'|bemClass }}
                    {% if acceptText|length > 0 %}{{ 'accept--hasText'|bemClass }}{% endif %}">
                    <span class="{{ 'accept__text'|bemClass }}">{{ acceptText }}</span>
                </a>
            {% endblock %}

        </div>
    {% endif %}
{% endblock %}
